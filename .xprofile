#!/bin/bash

# Display setup
xrandr --output eDP-1 --primary --mode 1920x1080 --pos 0x0 --rotate normal \
  --output HDMI-1-0 --mode 1920x1080 --pos 1920x0 --rotate normal

# Keyboard setup
# Reset XKB to a clean state, then apply only the options you want
setxkbmap -layout us -option
setxkbmap -layout us -option caps:escape_shifted_capslock -option compose:ralt

# Key repeat rate
xset r rate 300 120

export JBSTARTSCRIPT="$HOME/.xprofile"

# Start the window manager (dwm in this case)
# exec dwm
