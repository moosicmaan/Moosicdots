# =====================================================
# -----------------------------------------------------
# Output configuration
# -----------------------------------------------------
# =====================================================
default_border          pixel 2
default_floating_border pixel 4
floating_maximum_size   1800 x 900
floating_minimum_size   100 x 50
default_orientation     auto
workspace_layout        default
# exec_always autotiling --output HDMI-A-1             # make sway do master/stack like dwm, but only on the external monitor

# -----------------------------------------------------
# Windows:
# -----------------------------------------------------
gaps {
  inner 4
  outer 2
}
smart_gaps              on
smart_borders           on

# rules
for_window [shell="xwayland"] title_format "<b>%class</b>"
for_window [floating] border pixel 4

for_window [app_id="zen-browser" title="^Picture-in-Picture$"] \
  floating enable, \
  move position 877 450, \
  sticky enable, \
  border none

for_window [app_id="waypaper"] \
  floating enable, \
  resize set width 1530 px height 726 px, \
  move position center

for_window [app_id="mpv"] \
  floating enable, \
  resize set width 800 px height 450 px, \
  move position center, \
  border pixel 1

for_window [class="vlc"] \
  floating enable, \
  resize set width 800 px height 450 px, \
  move position center, \
  border pixel 1

for_window [app_id="galculator"] \
  floating enable, \
  resize set width 400 px height 400 px, \
  move position center

# for_window [class="Vial"] \
#   floating enable, \
#   resize set width 1200 px height 900 px, \
#   move position center, \
#   border pixel 4

for_window [app_id="obsidian"] \
  floating enable, \
  resize set width 1600 px height 900 px, \
  move position center

for_window [app_id="bluet"] \
  floating enable, \
  resize set width 800 px height 450 px, \
  move position center
