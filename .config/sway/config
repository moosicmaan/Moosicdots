# -----------------------------------------------------
# ENVIRONMENT ACTIONS
# -----------------------------------------------------
bindsym $mod+Ctrl+b exec $bartog       pkill waybar || $my_scripts/hypr-barlaunch
bindsym $mod+Ctrl+w exec $wallr        $my_scripts/ut-wallpaper --random
