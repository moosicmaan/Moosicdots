#!/bin/bash
# =====================================================
# -----------------------------------------------------
# ENVIRONMENT VARIABLES
# -----------------------------------------------------
# =====================================================
# echo "$(date) - START in uwsm/env-hyprland setting environment" >>"$HOME/.config/hypr/start.log"

# SESSION
export XDG_SESSION_DESKTOP=hyprland
export XDG_CURRENT_DESKTOP=Hyprland
export HYPRLAND_INSTANCE_SIGNATURE=882f7ad7d2bbfc7440d0ccaef93b1cdd78e8e3ff_1739199858_moosicmaan

# ACQUAMARINE
export AQ_DRM_DEVICES=/dev/dri/card2:/dev/dri/card1 # use the integrated card first, and then use nvidia card if needed

# echo "$(date) - FINISHED in uwsm/env setting environment" >>"$HOME/.config/hypr/start.log"
export UWSM_SESSION_TYPE=HYPR

# environment not set in Fish or bash
# these should be set through .bash_profile --> .profile now
export XDG_CONFIG_HOME=$HOME/.config
export TERM=xterm-256color
export TERMINAL=kitty
export TERMINAL_EMULATOR=kitty
export BROWSER=zen-browser
export EMAIL=thunderbird
export EDITOR=nvim
export VISUAL=kate
export SUDO_EDITOR=vim
